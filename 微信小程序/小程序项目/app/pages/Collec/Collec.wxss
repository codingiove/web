.Collec {
  display: flex;
  height: 90rpx;
  width: 100%;
}

.Collec_item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
}
.active{
  color: #f7544b;
  border-bottom: 4rpx solid #f7544b;
}
.list_navbar {
  display: flex;
}
.list_navbar .navbar_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  flex: 1;
}

.active {
  border-bottom: 6rpx solid #f7544b;
}

.list_goods {
  display: flex;
}

.list_goods .goods_img {
  padding: 20rpx;
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2px solid #eee;
}

.list_goods .goods_img image{
  width: 100%;
  height: 100%;
}
.list_goods .goods_description .goods_name{
  overflow: hidden;
  /*自动隐藏文字*/
  text-overflow: ellipsis;
  /*文字隐藏后添加省略号*/
  display: -webkit-box;
  -webkit-line-clamp: 2;
  /*想要显示的行数*/
  -webkit-box-orient: vertical;
 
}
.list_goods .goods_description .goods_price{
  color: #f7544b;
  font-size: 32rpx;
  padding-top: 15rpx;
}