page {
  height: 100%;
}

.category {
  height: 100%;
}

.category_menu {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category_menu .menu_left .menu_item{
  background-color: #f6f6f6;
}
.category_menu .menu_left {
  flex: 2;
}

.category_menu .menu_right {
  flex: 5;
}

.category_menu .menu_item {
  display: flex;
  align-items: center;
  height: 80rpx;
  justify-content: center;
  font-size: 28rpx;
}

.content_list {
  display: flex;
  flex-wrap: wrap;
}

.content_list navigator {
  width: 33.33%;
  text-align: center;
  padding-bottom: 20rpx;
}

.content_list navigator image {
  width: 60%;
}

.menu_content .separator{
  color: #ccc;
  padding: 0 10rpx;
}

.menu_content text:nth-child(2){ 
  padding: 0 20rpx;
}

.content_title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}
.cat_name{
  font-size: 28rpx;
}
.active{
  color:#f7544b;
  border-right: 8rpx solid #f7544b;
}